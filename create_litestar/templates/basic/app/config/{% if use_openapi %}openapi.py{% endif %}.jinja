"""OpenAPI settings for Litestar."""


from litestar.openapi.config import OpenAPIConfig

{%- if openapi == "scalar" %}
from litestar.openapi.plugins import ScalarRenderPlugin
{%- elif openapi == "rapid_doc" %}
from litestar.openapi.plugins import RapidocRenderPlugin
{%- elif openapi == "swagger_ui" %}
from litestar.openapi.plugins import SwaggerRenderPlugin
{%- elif openapi == "spotlight_elements" %}
from litestar.openapi.plugins import StoplightRenderPlugin
{%- elif openapi == "redoc" %}
from litestar.openapi.plugins import RedocRenderPlugin
{%- endif %}

#from app.__metadata__ import __version__
from app.config.settings import get_settings

settings = get_settings()

# --- Config
openapi_config = OpenAPIConfig(
    title=settings.app.NAME,
    version="0.1",
    path="/api",
    use_handler_docstrings=True,
    render_plugins=[
        {%- if openapi == "scalar" %}
        ScalarRenderPlugin(
            version="latest",
        )
        {%- elif openapi == "rapid_doc" %}
        RapidocRenderPlugin()
        {%- elif openapi == "swagger_ui" %}
        SwaggerRenderPlugin()
        {%- elif openapi == "spotlight_elements" %}
        StoplightRenderPlugin()
        {%- elif openapi == "redoc" %}
        RedocRenderPlugin()
        {%- endif %}
    ],
)
